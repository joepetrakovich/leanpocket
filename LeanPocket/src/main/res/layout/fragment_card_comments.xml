<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:id="@+id/layout_comments_fragment"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:id="@+id/layout_comments_list_wrapper"
            android:orientation="vertical"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/card_comments_list" />

            <RelativeLayout
                android:id="@android:id/empty"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_empty_comments"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/no_comments_yet"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textStyle="italic"
                    android:textColor="@android:color/darker_gray" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_height="56dp"
            android:layout_width="match_parent"
            android:orientation="vertical"

            >

            <View
                android:background="@color/actionbar_blue"
                android:layout_height="2dp"
                android:layout_width="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:inputType="textMultiLine|textCapSentences|textAutoCorrect"
                    android:capitalize="sentences"
                    android:ems="10"
                    android:id="@+id/et_comment"
                    android:layout_weight="1"
                    android:hint="@string/hint_comment_type_comment" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/send_comment"
                    android:src="@drawable/ic_action_send"
                    android:background="@drawable/send_button_selector"
                    android:padding="8dp"
                    android:id="@+id/btn_comment_send" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_lock_veil"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#000"

        >

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/frame_padding"
            android:layout_marginRight="@dimen/frame_padding"

            android:padding="@dimen/frame_padding"
            android:orientation="vertical"
            android:background="@drawable/upgrade_box">

            <TextView
                android:id="@+id/tv_upgrade"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/frame_padding"
                android:layout_marginRight="@dimen/frame_padding"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="#000"
                android:text="@string/upgrade_reason" />

            <Button
                android:id="@+id/btn_upgrade"
                android:layout_margin="@dimen/element_spacing"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/action_upgrade" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>